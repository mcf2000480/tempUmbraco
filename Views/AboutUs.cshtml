@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.AboutUs>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "_Layout.cshtml";
}

<section class="inner-banner" style="background-image: url(@Model.Value("mainImage")">
    <div class="container">
        <h1>@Model.Name</h1>
    </div>
</section>

<section class="introduction">
    <div class="container">
        <div class="row about-first-section">
            <div class="col-md-12 col-lg-6 order-lg-1 order-2">
                <div class="info-panel">
                    <h1 class="text-primary about-heading">@Model.Value("aboutSection1Heading")</h1>
                    @Model.Value("aboutSection1Description")
                </div>
            </div>

            <div class="col-md-12 col-lg-6 order-lg-2 order-1 mb-5 mb-lg-0">
                <div class="img-panel">
                    <img src="@Model.Value("aboutSection1Image")" alt="@Model.Value("aboutSection1Image.Name")">
                </div>
            </div>
        </div>
    </div>
</section>

                    <section class="committed-panel">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-6 mb-5 mb-lg-0">
                <div class="img-panel">
                    <img src="@Model.Value("aboutSection2Image")" alt="img">
                </div>
            </div>

            <div class="col-md-12 col-lg-6">
                <div class="info-panel">
                    <h1 class="text-primary">@Model.Value("aboutSection2Heading")</h1>
                    @Model.Value("aboutSection2Description")
                </div>
            </div>
        </div>
    </div>
</section>

@*===== Accreditations =====*@
@await Umbraco.RenderMacroAsync("Accreditations")